{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
  ],
  "assigneesFromCodeOwners": true,
  "automergeStrategy": "auto",
  "automergeType": "pr",
  "prConcurrentLimit": 5,
  "ignoreTests": false,
  "rebaseLabel": "needs-rebase",
  "rebaseWhen": "behind-base-branch",
  "recreateWhen": "always",
  "commitMessageSuffix": "{{baseBranch}}",
  "schedule": ["on Tuesday"],
  "tekton": {
    "enabled": true,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true,
        "addLabels": [
          "jira/valid-reference",
          "lgtm",
          "approved"
        ]
      }
    ]
  },
  "dockerfile": {
    "enabled": true,
    "packageRules": [
      {
        "matchFileNames": ["bundle.Dockerfile"],
        "automerge": true,
        "addLabels": [
          "jira/valid-reference",
          "lgtm",
          "approved"
        ]
      }
    ]
  },
  "gomod": {
    "enabled": false
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
